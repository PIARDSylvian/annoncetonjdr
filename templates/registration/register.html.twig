{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="justify-content-center">
        {% form_theme registrationForm 'bootstrap_4_horizontal_layout.html.twig' %}
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstName) }}
            {{ form_row(registrationForm.lastName) }}
            {{ form_row(registrationForm.pseudonym) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.secretQ) }}
            {{ form_row(registrationForm.secretR) }}
            {{ form_row(registrationForm.password.first) }}
            {{ form_row(registrationForm.password.second) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="text-center">
                <button type="submit">{% trans %}register_btn{% endtrans %}</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
